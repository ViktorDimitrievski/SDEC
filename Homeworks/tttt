.spanColor{
	background-color: orange;
}
.divColor{
	background-color: yellow;
}
.bigColor{
	font-size: 24px;
	background-color: red;
}




var areDivsShown = true;

$(function(){
	$("#colorSpans").click(function(){
		$("span").addClass("spanColor");
		
	});
	
	$("#colorDivs").click(function(){
		$("div").addClass("divColor");
		
	});
	
	$("#colorBigs").click(function(){
		$(".big").addClass("bigColor");
	});
	
	$("#uncolorSpans").click(function(){
		$("span").removeClass("spanColor bigColor");
	});
	$("#uncolorDivs").click(function(){
		$("div").removeClass("divColor bigColor");
		
	});
	
	$("#uncolorBigs").click(function(){
		$(".big").removeClass("bigColor");
	});
	
	//$("#hideSpans").click(function(){
	//	$("span").hide();
	//});
	
	//var areDivsShown = true;
	/*$("#hideDivs").click(function(event){
		console.log(event);
		hideShow(event.target.id,event.target.className);
	});
	
		$("#hideSpans").click(function(event){
		console.log(event);
		hideShow(event.target.id,event.target.className);
	});
	$("#hideBigs").click(function(event){
		console.log(event);
		hideShow(event.target.id,event.target.className);
	});*/
	
	$("button").click(function(event){
		hideShow(event.target.id,event.target.className);
	});
	
});



function hideShow(parametar,clasa){	
		
		var button = $("#"+parametar);
	
		
		if(areDivsShown){
			areDivsShown = false;
			$(clasa).fadeOut();
			button.text("Show");
			}
		else{
			areDivsShown = true;
			$(clasa).fadeIn();
			button.text("Hide");
		}
};
